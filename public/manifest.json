{
  "name": "FieldTech - Job & Document Manager",
  "short_name": "FieldTech",
  "description": "Offline-capable PWA for field technicians: create jobs with photos, voice, and vehicle OCR; digitize documents with automatic data extraction",
  "start_url": "/field",
  "scope": "/",
  "display": "standalone",
  "orientation": "portrait-primary",
  "background_color": "#ffffff",
  "theme_color": "#E2231A",
  "icons": [
    {
      "src": "/favicon.png",
      "sizes": "192x192",
      "type": "image/png",
      "purpose": "any"
    },
    {
      "src": "/favicon.png",
      "sizes": "512x512",
      "type": "image/png",
      "purpose": "maskable"
    }
  ],
  "categories": ["productivity"],
  "screenshots": [
    {
      "src": "/favicon.png",
      "sizes": "540x720",
      "type": "image/png"
    },
    {
      "src": "/favicon.png",
      "sizes": "1080x1440",
      "type": "image/png"
    }
  ],
  "shortcuts": [
    {
      "name": "Create Job",
      "short_name": "New Job",
      "description": "Create job with photos and vehicle detection",
      "url": "/field?tab=jobs",
      "icons": [
        {
          "src": "/favicon.png",
          "sizes": "96x96"
        }
      ]
    },
    {
      "name": "Capture Document",
      "short_name": "Document",
      "description": "Digitize invoices and receipts",
      "url": "/field?tab=documents",
      "icons": [
        {
          "src": "/favicon.png",
          "sizes": "96x96"
        }
      ]
    }
  ],
  "share_target": {
    "action": "/field",
    "method": "POST",
    "enctype": "multipart/form-data",
    "params": {
      "title": "title",
      "text": "text",
      "url": "url",
      "files": [
        {
          "name": "media",
          "accept": ["image/*", "video/*"]
        }
      ]
    }
  }
}
